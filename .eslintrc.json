{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "no-unused-vars": "warn",
        "import/extensions": ["error", "always"],
        "arrow-body-style": ["error", "always"],
        "react/prop-types": [0],
        "react/jsx-filename extension": [1, { "extensions": [".js", ".jsx"] }]
    }
}
